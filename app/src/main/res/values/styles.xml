<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>

    <style name="AppTheme.SplashActivityTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Text Styles -->
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Text Input Layout Styles -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/PurpleGrey40</item>
        <item name="hintTextColor">@color/PurpleGrey40</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconTint">@color/black</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusTopStart">@dimen/xs_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/xs_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/xs_margin</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/xs_margin</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="materialThemeOverlay">@style/TextInputEditTextThemeOverlay</item>
    </style>

    <style name="TextInputEditTextThemeOverlay">
        <item name="editTextStyle">@style/TextInputEditTextStyle</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>